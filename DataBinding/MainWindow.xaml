<Window x:Class="DataBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="309" Width="290">
    <StackPanel Margin="10">

        <StackPanel x:Name="Spl_DataContextBsp">
            <StackPanel.DataContext>
                <local:Person Vorname="Anna" Nachname="Nass" Alter="35"/>
            </StackPanel.DataContext>

            <TextBox Text="{Binding Path=Vorname}"/>
            <TextBlock Text="{Binding Nachname}"/>
            <TextBlock Text="{Binding Alter}"/>
            <TextBlock Text="{Binding WichtigeTage[1].DayOfWeek}"/>

            <Button x:Name="Btn_Show" Content="Show" Click="Btn_Show_Click"/>
            <Button x:Name="Btn_Altern" Content="Altern" Click="Btn_Altern_Click"/>
        </StackPanel>

        <ListView x:Name="LstV_Personen" ItemsSource="{Binding Personenliste}" Height="100"/>
        <Button Content="Add" x:Name="Btn_Add" Click="Btn_Add_Click"/>
        <Button Content="Delete" x:Name="Btn_Delete" Click="Btn_Delete_Click"/>

    </StackPanel>
</Window>
